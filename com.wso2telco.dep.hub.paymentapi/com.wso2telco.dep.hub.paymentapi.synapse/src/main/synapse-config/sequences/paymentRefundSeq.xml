<?xml version="1.0" encoding="UTF-8"?>
<sequence name="paymentRefundSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <property expression="json-eval($.amountTransaction.clientCorrelator)" 
    name="originalClientCorrelator" scope="default" type="STRING"/>
    <class name="org.wso2telco.dep.nashornmediator.NashornMediator">
        <property name="script" value="
            var payload= mc.getPayloadJSON();
            var clientCorrelator = mc.getProperty('clientCorrelator');
            payload.amountTransaction.clientCorrelator = clientCorrelator;
            mc.setPayloadJSON(payload);
        "/>
    </class>
    <property action="remove" name="REST_URL_POSTFIX" scope="axis2"/>
    <header expression="get-property('ENDPOINT')" name="To" scope="default"/>

    <property expression="json-eval($.amountTransaction.endUserId)"
              name="endUserId" scope="default" type="STRING"/>
    <!-- compare the msisdn in url and enduserId -->
    <class name="org.wso2telco.dep.nashornmediator.NashornMediator">
      <property name="script" value="
        var endUserId = mc.getProperty('endUserId');
        var msisdn = endUserId.substring(5);
        var endpointUrl = mc.getProperty('ENDPOINT');
        var equalMsisdns = true;
        if (endpointUrl.indexOf(msisdn) == -1) {
            equalMsisdns = false;
        }
        mc.setProperty('equalMsisdns', equalMsisdns);
      "/>
    </class>
    
    <filter regex="false" source="get-property('equalMsisdns')">
        <then>
            <property value="SVC0002" name="ERROR_CODE" scope="default" type="STRING"/>
            <property value="Two different endUserId provided" name="errvar" scope="default" type="STRING"/>
            <sequence key="commonFault"/>
        </then>
    </filter>

    <call-template target="com.wso2telco.dep.common.loggingExtension.Template">
      <with-param name="direction" value="REQUESTOUT"/>
    </call-template>

    <!-- quota limit -->
    <call-template target="com.wso2telco.dep.common.quota.limit.Template">
        <with-param name="direction" value="sb"/>
    </call-template>

    <!-- data publishing -->
    <call-template target="com.wso2telco.dep.common.main.request.datapublisher.Template">
        <with-param name="msisdn" value="{$ctx:MSISDN}"/>
        <with-param name="direction" value="sb"/>
    </call-template>


    <send>
        <endpoint key="defaultPaymentEndpoint"/>
    </send>
</sequence>
